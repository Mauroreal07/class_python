class Persona:
    def __init__(self):
        self.nombre = ""
        self.edad = 0

    
    def set_nombre(self,nombre):
        """Establece el nombre de la persona."""
        self.nombre = nombre

    
    def set_edad (self,edad):
        """Establece la edad de la persona."""
        self.edad = edad


    def es_mayor_de_edad(self):
        """Verifica si la persona es mayor de edad."""
        return self.edad >= 18
    

    def es_mayor_que(self, otra_persona):
        """Compara la edad del objeto actual con la edad de otra persona.
    Devuelve True si la edad del objeto actual es mayor a la de la otra persona,
    o False en caso contrario."""
        edad_actual = self.get_edad()
        edad_otra_persona = otra_persona.get_edad()
        return edad_actual > edad_otra_persona

    
    def get_nombre (self):
        """Obtiene el nombre de la persona."""
        return self.nombre
    

    def get_edad (self):
        """Obtiene la edad de la persona."""
        return self.edad


    def print_persona(self):
        """Imprime los datos de la persona (nombre y edad)"""
        print(f"El nombre es {self.get_nombre()}")
        print(f"La edad es {self.get_edad()}")


persona_1 = Persona()
persona_2 = Persona()
